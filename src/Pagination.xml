<?xml version="1.0" encoding="utf-8"?>
<widget id="com.mendix.widget.custom.pagination.Pagination" needsEntityContext="false" xmlns="http://www.mendix.com/widget/1.0/">
    <name>Pagination</name>
    <description>Add paging to a list view</description>
    <icon></icon>
    <properties>
        <property key="hideUnusedPaging" type="boolean" defaultValue="false">
            <caption>Hide unused paging</caption>
            <category>Appearance</category>
            <description>Hide paging buttons when there is only one page</description>
        </property>
        <property key="caption" type="translatableString" required="false">
            <caption>Caption</caption>
            <category>Appearance</category>
            <description>Use placeholder: {firstItem} {lastItem} {totalItems}</description>
            <translations>
                <translation lang="en_US">{firstItem} to {lastItem} of {totalItems}</translation>
                <translation lang="nl_NL">{firstItem} tot {lastItem} van {totalItems}</translation>
            </translations>
        </property>
        <property key="pagingStyle" type="enumeration" defaultValue="default">
            <caption>Paging style</caption>
            <category>Appearance</category>
            <description>Default rendering as grid</description>
            <enumerationValues>
                <enumerationValue key="default">Default</enumerationValue>
                <enumerationValue key="custom">Custom</enumerationValue>
            </enumerationValues>
        </property>
        <property key="items" type="object" isList="true" required="false">
            <caption>Items</caption>
            <category>Custom</category>
            <description/>
            <properties>
                <property key="item" type="enumeration" defaultValue="firstButton">
                    <caption>Item</caption>
                    <category>General</category>
                    <description>Item of the pagination</description>
                    <enumerationValues>
                        <enumerationValue key="firstButton">First button</enumerationValue>
                        <enumerationValue key="lastButton">Last button</enumerationValue>
                        <enumerationValue key="nextButton">Next button</enumerationValue>
                        <enumerationValue key="previousButton">Previous button</enumerationValue>
                        <enumerationValue key="text">Text</enumerationValue>
                    </enumerationValues>
                </property>
                <property key="displayOption" type="enumeration" defaultValue="icon">
                    <caption>Display option</caption>
                    <category>Appearance</category>
                    <description>Choose how paging button should be shown </description>
                    <enumerationValues>
                        <enumerationValue key="icon">Icon</enumerationValue>
                        <enumerationValue key="text">Text</enumerationValue>
                        <enumerationValue key="iconText">Icon and text</enumerationValue>
                    </enumerationValues>
                </property>
                <property key="iconClass" type="string" required="false">
                    <caption>Image icon</caption>
                    <category>General</category>
                    <description>Adds icon with class in the button</description>
                </property>
                <property key="text" type="translatableString" required="false">
                    <caption>Text</caption>
                    <category>General</category>
                    <description></description>
                </property>
                <property key="cssClass" type="string" required="false">
                    <caption>CSS Class</caption>
                    <category>General</category>
                    <description>Class placed on the item</description>
                </property>
            </properties>
        </property>
    </properties>
</widget>
